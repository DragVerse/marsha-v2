{
  "extends": "@dragverse/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "lib": ["esnext"],
    "jsx": "react-jsx",
    "types": ["node"],
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
